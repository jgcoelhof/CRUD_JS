<apex:page showHeader="false">
  <html lang="pt-br">
    <head>
      <meta charset="UTF-8"/>
      <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <title>CRUD</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"/>
      <style>
        
        body{background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
        color: white;}
        
        /* Estilos para o formul√°rio */
        form {
          width: 50%;
          margin: 20px auto;
        }
        .rowL {
          display: flex;
          flex-wrap: wrap;
        }

        .div{
          color: white;
          font:normal Arial;
          background: linear-gradient(90deg, rgb( 7, 7, 97) 0%, rgb(35, 66, 149)35%, rgb(3, 138, 206) 100%);
        }
        
        input[type=text], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        input[type=email], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        
        
        input[type=date], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        input[type=number], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }

        input[type=tel], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
        }
        input[type=submit] {
          width: 100%;
          background-color: white;
          color: blue;
          padding: 14px 20px;
          margin: 8px 0;
          border: none;
          border-radius: 4px;
          cursor: pointer;
        }
        input[type=submit]:hover {
          background: linear-gradient(-90deg, rgb( 7, 7, 97) 0%, rgb(35, 66, 149)35%, rgb(3, 138, 206) 100%);
          color:white;
        }
        /* Estilos para a tabela */
        table {
          background: linear-gradient(90deg, rgb( 7, 7, 97) 0%, rgb(35, 66, 149) 35%, rgb(3, 138, 206) 100%);
          border-collapse: collapse;
          width: 100%;
        }
        th, td {
          text-align: left;
          padding: 8px; 
        }
        th {
         
          color: white;
        }
        tr:nth-child(even) {
          background-color: #f2f2f2;
        }
      </style>  
    </head>
    <body>
      
      <!-- Register form -->
      <form id="form">

      <!--Accordion 1-->
        <div class="accordion accordion-flush" id="accordion1">
          <div class="div accordion-item">
            <h2 class="accordion-header" id="flush-heading1">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse1" aria-expanded="true" aria-controls="flush-collapse1">
                Personal Information
              </button>
            </h2>
            <div id="flush-collapse1" class="accordion-collapse collapse" aria-labelledby="flush-heading1" data-bs-parent="#accordion1">
              <div class="accordion-body">
                
                <!--Personal information inputs for form-->
                <label for="accname">Account Name:</label>
                <input type="text" id="accname" name="accname" />
        
                <label for="name">Name:</label>
                <input type="text" id="name" name="name"/>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email"/>

                <div class="rowL" id="rowTelEmail">
                  <div style="flex: 1; margin-right: 20px;">
                    <label for="birthday">Birthday:</label>
                    <input type="date" id="birthday" name="birthday" max="8"/>
                  </div>
                  <div>
                    <label for="phone">Telephone</label>
                    <input type="tel" id="phone" placeholder="(00) 90000-0000" pattern="\([0-9]{2}\) [0-9]{4,5}-[0-9]{4}" maxlength="15"/>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <!--Accordion 2-->
          <div class="accordion accordion-flush" id="accordion2">
            <div class="div accordion-item">
              <h2 class="accordion-header" id="flush-heading2">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse2" aria-expanded="true" aria-controls="flush-collapse2">
                  Legal Information
                </button>
              </h2>
              <div id="flush-collapse2" class="accordion-collapse collapse" aria-labelledby="flush-heading2" data-bs-parent="#accordion2">
                <div class="accordion-body">

                <!--Legal information inputs for form-->
                <label for="type">Type:</label>
                <select id="type" name="type">
                  <option value="">--None--</option>
                  <option value="physical person">Physical person</option>
                  <option value="legal person">Legal person</option>
                  <option value="dependent">Dependent</option>
                </select>

                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" maxlength="14" placeholder="000.000.000" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"/>

                <label for="cnpj">CNPJ:</label>
                <input type="text" id="cnpj" name="cnpj" maxlength="18" placeholder="00.000.000/0000-00" pattern="\d{2}\.\d{3}\.\d{3}/\d{4}-\d{2}"/>
                </div>
              </div>
          </div>
      <!--Accordion 3-->
          <div class="accordion accordion-flush" id="accordion3">
            <div class="div accordion-item">
              <h2 class="accordion-header" id="flush-heading3">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse3" aria-expanded="true" aria-controls="flush-collapse3">
                 Addres Information
                </button>
              </h2>
              <div id="flush-collapse3" class="accordion-collapse collapse" aria-labelledby="flush-heading3" data-bs-parent="#accordion3">
                <div class="accordion-body">
                  
                <!--Address information inputs for form-->
                  <label for="country">Country:</label>
                  <input type="text" id="country" name="country"/>

                  <div class="rowL" id="rowStateCity">
                    <div style="flex: 1; margin-right: 20px;">
                      <label for="state" style="display: inline-block;">State:</label>
                      <input type="text" id="state" name="state" style="display: inline-block; margin-right: 10px;"/>
                    </div>
                    <div style="flex: 1;">
                      <label for="city" style="display: inline-block;">City:</label>
                      <input type="text" id="city" name="city" style="display: inline-block;"/>
                    </div>
                  </div>

                  <div class="rowL" id="rowAddNeigh">
                    <div style="flex: 1; margin-right: 20px;">
                      <label for="address">Addres:</label>
                      <input type="text" id="address" name="address"/>
                    </div>
                    <div style="flex: 1;">
                      <label for="neighborhood">Neighborhood:</label>
                      <input type="text" id="neighborhood" name="neighborhood" maxlength="6"/>
                    </div>
                  </div>

                  <div class="rowL" id="rowNumCep">
                    <div style="flex: 1; margin-right: 20px;">
                      <label for="addressNum">Number:</label>
                      <input type="number" id="addressNum" name="addressNum" min="0"/>
                    </div>

                    <div style="flex: 1;">                      
                      <label for="cep">CEP:</label>
                      <input type="text" id="cep" name="cep" placeholder="00000-000" maxlength="8" pattern="[0-9]{5}-[0-9]{3}"/> 
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>




        
        
       
        
        
        
        

        <input type="submit" value="Cadastrar"/>
      </form>
      <!--Tabela de registros-->
      <table id="tabela">
        <thead>
          <tr>
            <th>Account Name</th>
            <th>Name</th>
            <th>Email</th>
            <th>Telephone</th>
          </tr>
        </thead>
        <tbody id="registros">
        </tbody>
      </table>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    </body>
  </html>
</apex:page>
